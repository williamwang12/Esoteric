{
  "name": "backend",
  "version": "1.0.0",
  "description": "This directory contains the Node.js backend API server for the Esoteric loan management platform.",
  "main": "index.js",
  "scripts": {
    "start": "node server-2fa.js",
    "dev": "nodemon server-2fa.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --runInBand",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit --runInBand",
    "test:comprehensive": "jest tests/comprehensive.test.js --detectOpenHandles --forceExit",
    "test:2fa": "jest tests/2fa-comprehensive.test.js --detectOpenHandles --forceExit",
    "test:simple": "jest tests/simple-api.test.js --detectOpenHandles --forceExit",
    "test:requests": "jest tests/requests.test.js --detectOpenHandles --forceExit",
    "test:security": "jest tests/security-2fa.test.js --detectOpenHandles --forceExit",
    "test:enhanced": "jest tests/enhanced-comprehensive.test.js --detectOpenHandles --forceExit",
    "test:new": "jest tests/requests.test.js tests/security-2fa.test.js tests/enhanced-comprehensive.test.js --detectOpenHandles --forceExit --runInBand",
    "test:simple-requests": "jest tests/requests-simple.test.js --detectOpenHandles --forceExit",
    "test:all": "./run-tests.sh all",
    "test:runner": "./run-tests.sh",
    "test:comprehensive-suite": "NODE_ENV=test jest tests/auth-enhanced.test.js tests/user-profile.test.js tests/loans-basic.test.js tests/robust-api.test.js --detectOpenHandles --forceExit --runInBand",
    "test:ci": "jest --config=jest.config.ci.js --maxWorkers=2",
    "test:priority1": "jest final-tests/documents.test.js final-tests/withdrawal-requests.test.js final-tests/meeting-requests.test.js --maxWorkers=1 --detectOpenHandles --forceExit",
    "test:2fa-final": "jest final-tests/2fa.test.js --maxWorkers=1 --detectOpenHandles --forceExit",
    "test:lint": "eslint . --ext .js,.jsx --format stylish",
    "test:audit": "npm audit --audit-level=moderate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/s3-request-presigner": "^3.922.0",
    "@vendia/serverless-express": "^4.12.6",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "docusign-esign": "^8.4.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/speakeasy": "^2.0.10",
    "esbuild": "^0.25.11",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
