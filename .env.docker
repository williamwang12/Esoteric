# Docker Environment Variables
# Copy this file to .env for local Docker development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-for-production
JWT_EXPIRES_IN=7d

# Database Configuration (for Docker containers)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=esoteric_loans
DB_USER=postgres
DB_PASSWORD=password

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Backend Configuration
PORT=5002
NODE_ENV=development

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Zoom API Configuration (optional)
ZOOM_API_KEY=your-zoom-api-key-here
ZOOM_API_SECRET=your-zoom-api-secret-here